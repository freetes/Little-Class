    }
    >.history:last-child{
      padding-bottom: 100px;
    }
  }
  
  >.btns{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 300px;
    padding-bottom: 20px;
    background-color: white;

    >input{
      font-size: 16px;
