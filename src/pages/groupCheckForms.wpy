        font-size: 28rpx;
        color: #8A8A8A;
      }
      >.right{
        font-size: 28rpx;
        color: #8A8A8A;
        font-weight: normal;
        display: flex;
        flex-direction: row;
        justify-content: flex-end;
        align-items: center;
        
        >.iconfont{
          font-size: 24px;
        }
      }
    }

    >.form-info{
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      align-items: flex-start;
      width: 100%;
      font-size: 28rpx;

      >.form-title{
        font-size: 40rpx;
        font-weight: bold;
        color: black;
        line-height: 30px;
      }

      >.form-status{
        margin: 5px 0;
        font-size: 28rpx;
      }

      >.form-time{
        color: gray;
