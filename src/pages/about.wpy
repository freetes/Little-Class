
<style lang="less">
.container{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  width: 100%;
  overflow: hidden;
  color: black;

  >swiper{
    width: 100%;
    height: 200px;

    image{
      width: 100%;
    }
  }

  >.words-container{
    display: flex;
    width: 100%;
    height: 500px;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    margin-top: 20px;

    >text{
      position: relative;
      background-color: white;
      padding: 5px 15px;
      margin-bottom: 15px;
      border-radius: 15px;
      line-height: 20px;
      font-size: 16px;
      word-break: keep-all;
      white-space: nowrap;
      font-weight: bold;
      animation: showIn 8s linear 0s infinite;

      @keyframes showIn {
        from {
          left: 100%;
        }
        to {
          left: -100%;
        }
      }
    }
  }

  >.futures{
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    width: 100%;
    padding-bottom: 10px;

    >text{
      width: 100%;
      text-align: center;
      font-weight: bold;
      font-size: 14px;
    }
  }
}
</style>
<template>
  <view class="container">

    <swiper autoplay="{{ true }}" circular="{{ true }}">
      <block wx:for="{{imgUrls}}">
        <swiper-item>
          <image bindtap="previewImage('{{item}}')" src="{{item}}" class="slide-image" mode="aspectFill"></image>
        </swiper-item>
      </block>
    </swiper>

    <view class="words-container">
      <text>这个UI是真的好看耶✌️</text>
      <text style="margin-left: 20px;">签到确实解决了很多不方便，赞👍</text>
      <text style="margin-left: 40px;">笔记功能看起来高大上，用起来也好用鸭😊</text>
    </view>

    <view class="futures">
      <text>made with ❤️</text>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy'
  import request from '@/utils/request.js'

  export default class Index extends wepy.page {
    config = {
      navigationBarTitleText: '关于',
      navigationBarBackgroundColor: '#ffffff'
    }
    
    data = {
      imgUrls: ['../static/imgs/pic1.png']
    }

    methods = {
      previewImage(url){
        console.log(url)
        wx.previewImage({
          urls: [url]
        })
      },
    }

    onLoad() {

    }
  }
</script>
