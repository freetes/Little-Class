<style lang="less">
page{
}

.container{

  .buttons{
    position: fixed;
    right: 20px;
    bottom: 20px;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    z-index: 20;

    >image{
      width: 20px;
      height: 20px;
      background-color: white;
      padding: 10px 10px;
      border: 1px solid black;
      border-radius: 50%;
      animation: showBtns 0.5s ease;

      @keyframes showBtns {
        from {
          margin-right: -100px;
          opacity: 0;
        }
        to {
          margin-right: 0px;
          opacity: 1;
        }
      }
    }
  }

  .note-list{
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    width: 100%;
    padding: 20px 5%;
    animation: showIn 0.5s ease;

    @keyframes showIn {
      from {
        margin-top: 40px;
        opacity: 0;
      }
      to {
        margin-top: 0px;
        opacity: 1;
      }
    }

    >.note-item{
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      align-items: flex-start;
      width: 100%;
      height: 300px;
      border: none;
      border-radius: 5px;
      margin-bottom: 20px;
      background-color: white;
      box-shadow: 0 5px 5px #8A8A8A;

      >.cover{
        width: 100%;
        height: 100px;
        border-top-left-radius: 5px;
        border-top-right-radius: 5px;
      }
      
      >.content{
        font-size: 16px;
        color: #555;
        font-weight: bold;
        padding: 15px 10px;
      }
      >view{
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
